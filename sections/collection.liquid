{{ 'collection.css' | asset_url | stylesheet_tag }}

<section>
  <div class="collection-title">
    <h2 class="collection-heading">2025 COLLECTION</h2>
    <div class="underline"></div>
  </div>

  <div class="collection-images">
    <!-- 動画 -->
    <video class="collection-video" autoplay muted loop playsinline>
      <source src="{{ 'collection-video.mp4' | asset_url }}" type="video/mp4">
    </video>

    <!-- 写真1 -->
    <div class="collection-image center">
      <img src="{{ 'collection-photo1.jpg' | asset_url }}" alt="Collection Photo 1">
    </div>

    <!-- 写真2 -->
    <div class="collection-image left">
      <img src="{{ 'collection-photo2.jpg' | asset_url }}" alt="Collection Photo 2">
    </div>

    <!-- 写真3 -->
    <div class="collection-image right">
      <img src="{{ 'collection-photo3.jpg' | asset_url }}" alt="Collection Photo 3">
    </div>
  </div>
</section>
